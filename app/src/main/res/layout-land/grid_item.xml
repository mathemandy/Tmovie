<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_gravity="top"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="7dp"
    card_view:contentPaddingTop = "1dp"
    card_view:contentPaddingLeft="10dp"
    card_view:contentPaddingRight="10dp"
    card_view:contentPaddingBottom="10dp"
    card_view:cardElevation="@dimen/card_view_elevation"
    card_view:cardMaxElevation="@dimen/card_view_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:contentDescription="@string/content_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="88dp"
        android:scaleType="fitCenter"
        android:src="@drawable/oldest_movie"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_trans_1"
        >

        <ImageView
            android:id="@+id/iv_fire"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/tv_average"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/tv_average"
            android:alpha="0.5"
            android:src="@drawable/ic_whatshot_white" />

        <TextView
            android:id="@+id/tv_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.5"
            android:paddingBottom="8dp"
            android:padding="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="4.6" />

    </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>